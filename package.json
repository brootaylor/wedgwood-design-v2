{
  "name": "wedgwood-design-v2",
  "version": "1.1.2",
  "description": "Wedgwood Design Limited's website (v2).",
  "repository": "https://github.com/brootaylor/wedgwood-design-v2.git",
  "bugs": {
    "url": "https://github.com/brootaylor/wedgwood-design-v2/issues"
  },
  "homepage": "https://github.com/brootaylor/wedgwood-design-v2#readme",
  "keywords": [
    "personal",
    "website",
    "company-site"
  ],
  "author": "Bruce Taylor",
  "license": "SEE LICENSE IN LICENSE",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf assets && rimraf www",
    "prebuild": "npm run clean",
    "server": "http-server ./www -g -o -c-1",
    "scss": "node-sass --output-style compressed --source-map true -o assets/styles src/styles",
    "autoprefixer": "postcss -u autoprefixer --map --no-map -r assets/styles/*.css",
    "watch:css": "onchange 'src/styles/**/*.scss' -- npm run build:css",
    "watch": "npm-run-all --parallel watch:*",
    "build:files": "eleventy --quiet",
    "build:styles": "npm run scss && npm run autoprefixer",
    "build:scripts": "npx rollup -c",
    "build:static": "rsync -rm src/static src/robots.txt src/sitemap.xml assets",
    "build": "npm run build:styles && npm run build:scripts && npm run build:static && npm run build:files",
    "deploy-draft": "npm run build && netlify deploy",
    "deploy-production": "netlify deploy --prod"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.9.0",
    "autoprefixer": "^9.6.4",
    "http-server": "^0.11.1",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "postcss-cli": "^6.1.3",
    "rimraf": "^3.0.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-replace": "^2.2.0"
  },
  "browserslist": [
    "last 4 version",
    "> 1%",
    "IE 10"
  ]
}
