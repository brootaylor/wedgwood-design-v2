{
  "name": "wedgwood-design-v2",
  "version": "2.0.13",
  "description": "Wedgwood Design Limited's website (v2).",
  "repository": "https://github.com/brootaylor/wedgwood-design-v2.git",
  "bugs": {
    "url": "https://github.com/brootaylor/wedgwood-design-v2/issues"
  },
  "homepage": "https://github.com/brootaylor/wedgwood-design-v2#readme",
  "keywords": [
    "personal",
    "website",
    "company-site"
  ],
  "author": "Bruce Taylor",
  "license": "SEE LICENSE IN LICENSE",
  "scripts": {
    "clean": "rimraf www && mkdir www",
    "prebuild": "npm run clean",
    "scss": "node-sass --output-style compressed --source-map true -o www/styles src/styles",
    "autoprefixer": "postcss -u autoprefixer --map --no-map -r www/styles/*.css",
    "watch:files": "eleventy --quiet --serve",
    "watch:styles": "onchange 'src/styles/**/*.scss' -- npm run build:styles",
    "watch:scripts": "npx rollup -c --watch",
    "watch": "npm-run-all --parallel watch:*",
    "build:files": "eleventy --quiet",
    "build:styles": "npm run scss && npm run autoprefixer",
    "build:scripts": "npx rollup -c",
    "build": "npm run build:styles && npm run build:scripts && npm run build:files",
    "lint:markdown": "markdownlint src/**/*.md",
    "deploy-draft": "npm run build && netlify deploy",
    "deploy-production": "netlify deploy --prod",
    "audit:accessibility": "npx pa11y --standard WCAG2AA http://wedgwooddesign.com",
    "audit:performance": "lighthouse https://wedgwooddesign.com --budget-path=budget.json --output-path=./wedgwood-performance-results.html --view",
    "audit:npm-local": "ncu",
    "audit:npm-global": "ncu -g",
    "debug": "DEBUG=* npx eleventy"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.9.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^2.0.3",
    "autoprefixer": "^9.6.4",
    "html-minifier": "^4.0.0",
    "markdownlint-cli": "^0.18.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "postcss-cli": "^6.1.3",
    "rimraf": "^3.0.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-replace": "^2.2.0"
  },
  "browserslist": [
    "last 4 version",
    "> 1%",
    "IE 10"
  ]
}
